<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_25"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_25"
    android:paddingBottom="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/versionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="版本：1.0.3"
            android:textColor="#747474"
            android:textSize="@dimen/dp_13" />

        <TextView
            android:id="@+id/fileSizeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:text="包大小：18.2M"
            android:textColor="#747474"
            android:textSize="@dimen/dp_13" />

        <TextView
            android:id="@+id/upgradeTimeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:text="更新时间：2019-09-20 14:30:23"
            android:textColor="#747474"
            android:textSize="@dimen/dp_13" />

        <TextView
            android:id="@+id/upgradeTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="更新内容："
            android:textColor="#333333"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/upgradeMsgTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:maxHeight="@dimen/dp_200"
            android:scrollbars="vertical"
            android:text="1.修复了bug\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能\n2.增加了功能"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/downloadPb"
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_15"
        android:max="100"
        tools:progress="40" />

</LinearLayout>